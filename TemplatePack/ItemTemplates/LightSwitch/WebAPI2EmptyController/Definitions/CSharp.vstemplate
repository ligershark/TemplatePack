<VSTemplate Version="3.0.0" xmlns="http://schemas.microsoft.com/developer/vstemplate/2005" Type="Item">
  <TemplateData>
    <ProjectType>CSharp</ProjectType>

    <DefaultName>Item</DefaultName>
    <Name>Web API 2 Empty Controller</Name>
    <Description>This template creates an empty Web API controller, along with the supporting files needed (routing, global.asax). The output from this is inspired by the article by Joe Binder (MSFT). This is focused for Visual Studio LightSwitch HTML SERVER projects.</Description>
    <Icon>aspnet.ico</Icon>
    <NumberOfParentCategoriesToRollUp>1</NumberOfParentCategoriesToRollUp>
  </TemplateData>
  <TemplateContent>
    <References>
      <Reference>
        <Assembly>Newtonsoft.Json</Assembly>
      </Reference>      
      <Reference>
        <Assembly>System.Net.Http</Assembly>
      </Reference>
      <Reference>
        <Assembly>System.Net.Http.Formatting</Assembly>
      </Reference>
      <Reference>
        <Assembly>System.Web.Http</Assembly>
      </Reference>
      <Reference>
        <Assembly>System.Web.Http.WebHost</Assembly>
      </Reference>
    </References>

    <ProjectItem ReplaceParameters="true" TargetFileName="API\$safeitemname$Controller.cs">EmptyController.cs</ProjectItem>
    <ProjectItem ReplaceParameters="true" TargetFileName="Global.asax.cs">Global.asax.cs</ProjectItem>
    <ProjectItem ReplaceParameters="true" TargetFileName="Global.asax">Global.asax</ProjectItem>

  </TemplateContent>
</VSTemplate>